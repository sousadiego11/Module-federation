{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "/dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
		"jsx": "react-jsx",
		"esModuleInterop":true
  },
  "exclude": [
    "node_modules",
    "dist",
		"webpack.config.js"
  ]
}
